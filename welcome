#include <iostream>
using namespace std;

int main(int argc, char* argv[])
{
	if (argc != 3)
	{
		cout << "usage : " << endl;
		cout << "   " << argv[0] << " User Host" << endl;
	}
	else
	{
		cout << "Hello, " << argv[1] << "." << endl;
		cout << "My name is " << argv[2] << "." << endl;
		cout << "Welcome！" << endl;
	}
	return 0;
}
